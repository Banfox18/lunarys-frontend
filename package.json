{
  "name": "lunarys-frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache",
    "format": "prettier --write src/",
    "electron:dev": "vite",
    "electron:dev:full": "concurrently \"npm run backend:dev\" \"npm run electron:dev\"",
    "electron:build": "npm run build && electron-builder",
    "backend:dev": "cd ../Lunarys && mvn spring-boot:run",
    "backend:build": "cd ../Lunarys && mvn clean package -DskipTests",
    "build:all": "npm run backend:build && npm run build && electron-builder"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@iktakahiro/markdown-it-katex": "^4.0.1",
    "@vueuse/core": "^14.0.0",
    "animate.css": "^4.1.1",
    "axios": "^1.13.2",
    "element-plus": "^2.11.8",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.25",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "marked": "^17.0.0",
    "markstream-vue": "^0.0.2-beta.8",
    "mermaid": "^11.12.2",
    "monaco-editor": "^0.55.1",
    "pinia": "^3.0.3",
    "shiki": "^3.19.0",
    "stream-markdown": "^0.0.10",
    "stream-monaco": "^0.0.7",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.11",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "~10.5.0",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.11",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vue-tsc": "^3.1.1",
    "wait-on": "^9.0.3"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "space.arctain.lunarys",
    "productName": "Lunarys",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../Lunarys/target/Lunarys-0.0.1-SNAPSHOT.jar",
        "to": "backend/Lunarys-0.0.1-SNAPSHOT.jar",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
